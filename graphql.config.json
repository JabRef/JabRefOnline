{
  "schema": "server/**/*.graphql",
  "documents": [
    "./pages/**/*.vue",
    "./components/**/*.vue",
    "./plugins/**/*.ts",
    "./apollo/cache.ts",
    "./middleware/**/*.ts",
    "./server/**/*.test.ts"
  ],
  "extensions": {
    "codegen": {
      "overwrite": true,
      "generates": {
        "apollo/": {
          "preset": "client",
          "presetConfig": {
            "fragmentMasking": true,
            "gqlTagName": "gql"
          },
          "config": {
            "scalars": {
              "Date": "Date",
              "DateTime": "Date",
              "EmailAddress": "string",
              "BigInt": "BigInt"
            }
          }
        },
        "apollo/introspection.ts": {
          "plugins": ["fragment-matcher"]
        },
        "apollo/validation.internal.ts": {
          "plugins": [
            {
              "add": {
                "content": "// @ts-nocheck"
              }
            },
            "typescript-validation-schema"
          ],
          "config": {
            "schema": "zodv4",
            "scalarSchemas": {
              "Date": "z.date()",
              "DateTime": "z.date()",
              "EmailAddress": "z.email()",
              "BigInt": "z.bigint()"
            },
            "importFrom": "~/apollo/graphql",
            "validationSchemaExportType": "const"
          }
        }
      },
      "hooks": {
        "afterOneFileWrite": ["node scripts/apollo-afterOneFileWrite.js"]
      }
    }
  }
}
