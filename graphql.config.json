{
  "schema": "server/**/*.graphql",
  "documents": [
    "./pages/**/*.vue",
    "./components/**/*.vue",
    "./plugins/**/*.ts",
    "./apollo/cache.ts",
    "./middleware/**/*.ts",
    "./server/**/*.test.ts"
  ],
  "extensions": {
    "codegen": {
      "overwrite": true,
      "generates": {
        "apollo": {
          "preset": "gql-tag-operations-preset",
          "presetConfig": {
            "fragmentMasking": true
          },
          "config": {
            "scalars": {
              "Date": "Date",
              "DateTime": "Date",
              "EmailAddress": "string"
            }
          }
        },
        "apollo/introspection.ts": {
          "plugins": ["fragment-matcher"]
        },
        "apollo/validation.internal.ts": {
          "plugins": [
            {
              "add": {
                "content": "// @ts-nocheck"
              }
            },
            "typescript-validation-schema"
          ],
          "config": {
            "schema": "zod",
            "scalarSchemas": {
              "Date": "z.date()",
              "DateTime": "z.date()",
              "EmailAddress": "z.string().email()"
            },
            "importFrom": "~/apollo/graphql"
          }
        }
      }
    }
  }
}
